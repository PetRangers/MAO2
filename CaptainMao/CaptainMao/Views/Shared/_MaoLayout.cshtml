                    <span class="fa fa-user"></span>
                </li>
                <li class="hidden-md hidden-lg toggle">
                    <span class="fa fa-lg fa-cart-plus"></span>
                </li>

            </ul>
        </nav>
        <!-- 左邊側欄-->
        <div id="accordion" class="social">
            <div class="accordion-social">
<!--class加in會打開--><ul class="panel-collapse in collapse nav nav-stacked" role="tabpanel" aria-labelledby="social-collapse" id="collapseOne">
                    <li><a href="https://www.facebook.com/soldierupdesigns" target="_blank" class="fa fa-lg fa-facebook"></a></li>
                    <li><a href="https://twitter.com/soldierupdesign" target="_blank" class="fa fa-lg fa-twitter"></a></li>
                    <li><a href="https://www.plus.google.com/+soldierupdesigns" target="_blank" class="fa fa-lg fa-google-plus"></a></li>
                    <li><a href="https://github.com/blayderunner123" target="_blank" class="fa fa-lg fa-github"></a></li>
                    <li><a href="https://linkedin.com/in/blayderunner123" target="_blank" class="fa fa-lg fa-linkedin"></a></li>
                    <li><a href="skype:live:soldierupdesigns?call" class="fa fa-lg fa-skype" target="_blank"></a></li>
                    <li><a href="http://stackexchange.com/users/4992378/blayderunner123" target="_blank" class="fa fa-lg fa-stack-exchange"></a></li>
                </ul>
            </div>
        </div>

        <main class="container-fluid">
            <div class="row">
               @RenderBody()
            </div>
        </main>
        <footer>
            @Scripts.Render("~/bundles/modernizr")
            @RenderSection("script", false)
        </footer>
    </div>
</body>
</html>

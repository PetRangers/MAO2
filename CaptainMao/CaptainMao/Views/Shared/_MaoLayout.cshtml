<!DOCTYPE html>

<html lang="zh-Hant-TW">
<head runat="server">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="毛牌隊長官方購物網站，針對以貓狗為主的寵物飼主提供包括寵物相關活動、
    寵物服務查詢、寵物醫療資訊、寵物話題討論區以及寵物用品購物商城等功能。我們希望藉由透明的使用者評價
    機制與管理者的審查機制，協助飼主們選擇最優良的服務與商品，以及獲得正確的寵物飼養照顧資訊。我們也期
    待透過討論平台與活動訊息，能讓飼主們建立起更緊密聯結的寵物交流社群。" />
    <meta name="keywords" content="寵物,毛小孩,狗,狗狗,汪,喵,貓,貓咪,領養,討論,寵物美容" />
    <title>@ViewBag.Title - CaptainMao</title>


    @Styles.Render("~/css")
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Caveat" rel="stylesheet">

    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/chat.css" rel="stylesheet" />
    @RenderSection("style", false)


</head>
<body>
    <div id="page">
        <nav class="navbar navbar-default navbar-fixed-top">
            <!-- NAV -->
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="btn btn-lg pull-left btn-dark accordion-toggle" title="關於我們" role="tab" data-toggle="collapse" data-parent="#accordion" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <span class="sr-only">關於我們所有粉絲團</span>
                    </a>
                    <a class="navbar-brand" href=@Url.Action("Index","CaptainMao",new { area=""})>CaptainMao</a>
                    <a id="menu-toggle" href="#" class="btn btn-lg btn-dark">
                        <span class="sr-only">開啟所有選單按鈕</span>
                        <i class="fa fa-bars"></i>
                    </a>
                    <a id="to-top" class="btn btn-lg btn-inverse" href="#top">
                        <span class="sr-only">回TOP按鈕</span>
                        <i class="fa fa-chevron-up"></i>
                    </a>


                </div>
                <!-- nav下拉選單 -->
                <div class="collapse navbar-collapse ">
                    <ul class="nav navbar-nav navbar-left">
                        <li class="dropdown mega-dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="網站地圖">網站地圖<span class="caret"></span><br><br>快速導覽<span class="caret"></span></a>
                            <ul class="dropdown-menu mega-dropdown-menu">
                                <li class="col-sm-2"></li>
                                <li class="col-sm-2">
                                    <ul>
                                        <li class="dropdown-header">七嘴八舌</li>
                                        <li class="divider"></li>
                                        <li><a href="@Url.Action("Board","Article",new { area="Article"})">哈拉主版</a></li>
                                    </ul>
                                </li>
                                <li class="col-sm-2">
                                    <ul>
                                        <li class="dropdown-header">毛孩購物</li>
                                        <li class="divider"></li>
                                        <li>@Html.ActionLink("汪孩商品", "Index", "Shopping", new { area = "buy", CategoryID = "1" }, null)</li>
                                        <li>@Html.ActionLink("貓孩商品", "Index", "Shopping", new { area = "buy", CategoryID = "2" }, null)</li>
                                        <li>@Html.ActionLink("鳥兒商品", "Index", "Shopping", new { area = "buy", CategoryID = "3" }, null)</li>
                                        <li>@Html.ActionLink("兔兔商品", "Index", "Shopping", new { area = "buy", CategoryID = "4" }, null)</li>
                                        <li>@Html.ActionLink("鼠鼠商品", "Index", "Shopping", new { area = "buy", CategoryID = "5" }, null)</li>

                                    </ul>
                                </li>
                                <li class="col-sm-2">
                                    <ul>
                                        <li class="dropdown-header">尋找新家</li>
                                        <li class="divider"></li>
                                        <li>@Html.ActionLink("個人管理", "AdoptionManage", "Adoption", new { area = "Adoption" }, null)</li>
                                        <li>@Html.ActionLink("領養列表", "Index", "Adoption", new { area = "Adoption" }, null)</li>
                                        <li>@Html.ActionLink("尋找新主人", "CreateAdoption", "Adoption", new { area = "Adoption" }, null)</li>
                                        <li>@Html.ActionLink("領養心願", "AdoptionWish", "Adoption", new { area = "Adoption" }, null)</li>
                                        <li>@Html.ActionLink("新增心願", "CreateAdpWish", "Adoption", new { area = "Adoption" }, null)</li>
                                    </ul>
                                </li>
                                <li class="col-sm-2">
                                    <ul>
                                        <li class="dropdown-header">毛孩醫院</li>
                                        <li class="divider"></li>
                                        <li>@Html.ActionLink("醫院區域", "HospitalSearchCity", "Hospital", new { area= "Hospital" })</li>
                                        <li> @Html.ActionLink("寵物種類", "HospitalSearchCity", "Hospital", new { area = "Hospital" })</li>
                                    </ul>
                                </li>

                                <li class="col-sm-2"></li>
                            </ul>
                        </li>
                        <li><a href = "@Url.Action("Board","Article",new { area="Article"})" class="dropdown-toggle" title="毛孩討論">七嘴八舌<br /><br />討論專區</a></li>
                        <li><a href = "@Url.Action("index","Shopping",new { area="buy"})" class="dropdown-toggle" title="毛孩購物">毛孩購物<br /><br />購物專區</a></li>
                        <li><a href = "@Url.Action("AdoptionManage","Adoption",new { area= "Adoption" })" class="dropdown-toggle" title="毛孩領養">尋找新家<br /><br />領養專區</a></li>
                        <li><a href = "@Url.Action("HospitalSearchCity","Hospital",new { area="Hospital"})" class="dropdown-toggle" title="毛孩地圖">毛孩醫院<br /><br />查詢專區</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <div id = "showOrder" ><a href='@Url.Action("Index", "User", new { area = "buy" })' title="我的訂單"><i class="glyphicon glyphicon-list-alt"></i></a></div>
                        <li>
                            <a id = "shoppingCart" href="@Url.Action("Index", "ShoppingCart", new { area = "buy" })" title="購物車"><span class="glyphicon glyphicon-shopping-cart"></span><br /><br />shop</a>
                        </li>
                        @Html.Partial("_LoginPartial")
                    </ul>

                </div><!-- /.nav-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        <!-- 右邊側欄-->
        <nav id = "sidebar-wrapper" >
            <ul class="sidebar-nav">

                @*<li id="menu-close" class="btn btn-danger hidden-md hidden-lg toggle"><i class="fa fa-times"></i></li>*@
                <li class="sidebar-brand">
                    <a>CaptainMao</a>
                </li>
                <li>
                    <a href="@Url.Action("Board","Article",new { area="Article"})" title="七嘴八舌">七嘴八舌</a>
                </li>
                <li>
                    <a href="@Url.Action("index","Shopping",new { area="buy"})" title="毛孩購物">毛孩購物</a>
                </li>
                <li>
                    <a href="@Url.Action("AdoptionManage","Adoption",new { area= "Adoption" })" title="尋找新家">尋找新家</a>
                </li>
                <li>
                    <a href="@Url.Action("HospitalSearchCity","Hospital",new { area="Hospital"})" title="毛孩醫院">毛孩醫院</a>
                </li>
                <li>
                    <a href="@Url.Action("Login","Account")"><span class="fa fa-user "></span>會員</a>
                </li>
                <li>
                    <a href="@Url.Action("Index","ShoppingCart",new { area="buy"})"><span class="fa fa-lg fa-cart-plus"></span>購物車</a>
                </li>
            </ul>
        </nav>
        <!-- 左邊側欄-->
        <div id="accordion" class="social">
            <div class="accordion-social">
                <!--class加in會打開--><ul class="panel-collapse collapse nav nav-stacked" role="tabpanel" aria-labelledby="social-collapse" id="collapseOne">
                    <li><a href="https://www.facebook.com/soldierupdesigns" target="_blank" class="fa fa-lg fa-facebook"></a></li>
                    <li><a href="https://twitter.com/soldierupdesign" target="_blank" class="fa fa-lg fa-twitter"></a></li>
                    <li><a href="https://www.plus.google.com/+soldierupdesigns" target="_blank" class="fa fa-lg fa-google-plus"></a></li>
                    <li><a href="https://github.com/blayderunner123" target="_blank" class="fa fa-lg fa-github"></a></li>
                    <li><a href="https://linkedin.com/in/blayderunner123" target="_blank" class="fa fa-lg fa-linkedin"></a></li>
                    <li><a href="skype:live:soldierupdesigns?call" class="fa fa-lg fa-skype" target="_blank"></a></li>
                    <li><a href="http://stackexchange.com/users/4992378/blayderunner123" target="_blank" class="fa fa-lg fa-stack-exchange"></a></li>
                    <li><a href=@Url.Action("Index", "NormalUser", new { area = "Admin" }) title="網站管理者介面"><span class="fa fa-lg fa-empire"></span></a></li>
                </ul>
            </div>
        </div>
        <main class="container-fluid">
            <div class="row">
                @RenderBody()
            </div>


            <div id="chatdiv" class="div_left_bottom row">
                <input id="chaturl" type="hidden" value="@Url.Action("_Chat","Shared",new { Area = ""})" />
                <div class="childdiv nextchat">
                </div>
            </div>


        </main>
        <footer>
            @Scripts.Render("~/bundles/modernizr")
            @RenderSection("script", false)
            
        </footer>
    </div>
</body>
</html>

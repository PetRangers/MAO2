
@model IEnumerable<CaptainMao.Models.Merchandise>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MaoLayout.cshtml";
}

<!--aside側欄 article主欄-->

<aside class="col-lg-1 col-lg-offset-1 col-sm-1">
    <!-------------------asideOpen------------------->
    @Html.Action("Aside","Store")
    <!-------------------asideEnd------------------->
</aside>
<article class="col-lg-9 col-sm-11">

    <!-------------------articleOpen------------------->
    <div class="col-lg-12">
        <div style="height:700px;background-color:#fff266;" class="drawingpin">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(c => c.First().Merchandise_ID).ToHtmlString()</th>
                        <th>@Html.DisplayNameFor(c => c.First().Merchandise_Name)</th>
                        <th>@Html.DisplayNameFor(c => c.First().Merchandise_Photo)</th>
                        <th>@Html.DisplayNameFor(c => c.First().Merchandise_Price)</th>
                        <th>@Html.DisplayNameFor(c => c.First().Merchandise_Creatdate)</th>
                        <td>@Html.DisplayNameFor(c => c.First().Merchandise_Fitness)</td>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var _model in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(c=>_model.Merchandise_ID)</td>
                            <td>@Html.DisplayFor(c => _model.Merchandise_Name)</td>
                            <td><img src='@Url.Action("PixbyID", "zPublicFunction", new { id = _model.Merchandise_ID})' class="img-circle" width="80" /></td>
                            <td>@Html.DisplayFor(c => _model.Merchandise_Price)</td>
                            <td>@Html.DisplayFor(c => _model.Merchandise_Creatdate)</td>
                            <td>@Html.DisplayFor(c=>_model.Merchandise_Fitness)</td>
                            <td>
                                <button>快速修改</button>
                                @Html.ActionLink("修改","Edit","Store",new { Merchandise_ID =_model.Merchandise_ID},new{@class= "btn btn-primary" })
                                @Html.ActionLink("刪除", "Delete", "Store", new { Merchandise_ID = _model.Merchandise_ID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-------------------articleEnd------------------->
</article>

@section style{
}
@section script{

<script>console.log(@ViewBag.Message)</script>
}

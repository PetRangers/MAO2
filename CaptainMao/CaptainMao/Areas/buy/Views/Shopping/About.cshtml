@model CaptainMao.Models.Merchandise
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_MaoLayout.cshtml";
}

@section style{
    <link href="~/Areas/buy/css/shoppingIndex.css" rel="stylesheet" />
}
<!--aside側欄 article主欄-->

<aside class="col-lg-1 col-lg-offset-1 col-sm-1">
    <!-------------------asideOpen------------------->
    @Html.Action("Aside", "Shopping")
    <!-------------------asideEnd------------------->
</aside>
<article class="col-lg-9 col-sm-11">

    <!-------------------articleOpen------------------->
    <div class="col-lg-12">
        <div class="drawingpin">
            <table>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(c => c.Merchandise_ID)</th>
                        <th>@Html.DisplayNameFor(c => c.Merchandise_Name)</th>
                        <th>@Html.DisplayNameFor(c => c.Merchandise_Price)</th>
                        <th>@Html.DisplayNameFor(c => c.Merchandise_Photo)</th>
  
                        
                        @if ( Model.Merchandiser_Editdata != null)
                        {
                            <th>@Html.DisplayNameFor(c => c.Merchandiser_Editdata)</th>
                        }
                        else
                        {
                            <th>@Html.DisplayNameFor(c => c.Merchandise_Creatdate)</th>
                        }
                        <th>@Html.DisplayNameFor(c => c.Merchandise_Description)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(c => c.Merchandise_ID)</td>
                        <td>@Html.DisplayFor(c => c.Merchandise_Name)</td>
                        <td>@Html.DisplayFor(c => c.Merchandise_Price)</td>
                        <td><img src='@Url.Action("PixbyID", "zPublicFunction", new { id = Model.Merchandise_ID})' class="img-circle" width="500" /></td>

                        @if (Model.Merchandiser_Editdata != null)
                        {
                            <td>@Html.DisplayFor(c => c.Merchandiser_Editdata)</td>
                        }
                        else
                        {
                            <td>@Html.DisplayFor(c => c.Merchandise_Creatdate)</td>
                        }
                        <td>@Html.DisplayFor(c => c.Merchandise_Description)</td>
                    </tr>
                </tbody>
            </table>
            
            @Html.ActionLink("加入購物車", "AddCar", "Shopping", new { Merchandise_ID = Model.Merchandise_ID }, new { @class = "btn btn-primary" })
            <button class = "btn btn-primary" onclick="history.back()">回上一頁</button>
        </div>
    </div>
</article>

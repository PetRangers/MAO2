<script>
    $(function () {
        var CategoryID1 = '@ViewBag.CategoryID1';
        if (CategoryID1 == 1)
        { $('#Category1').prop("checked", true); }
        var CategoryID2 = '@ViewBag.CategoryID2';
        if (CategoryID2 == 1)
        { $('#Category2').prop("checked", true); }
        var CategoryID3 = '@ViewBag.CategoryID3';
        if (CategoryID3 == 1)
        { $('#Category3').prop("checked", true); }
        var CategoryID4 = '@ViewBag.CategoryID4';
        if (CategoryID4 == 1)
        { $('#Category4').prop("checked", true); }
        var CategoryID5 = '@ViewBag.CategoryID5';
        if (CategoryID5 == 1)
        { $('#Category5').prop("checked", true); }
        var CategoryID6 = '@ViewBag.CategoryID6';
        if (CategoryID6 == 1)
        { $('#Category6').prop("checked", true); }
    });

    function checkForm() {
        var SaveCategory;
        for (var i = 1; i < 6; i++) {
            var one = document.getElementById('Category' + i);
            if (one.checked) {
                document.getElementById("CategoryList").value += i + "|";
            }
        }
    }
</script>



<!--aside側欄 article主欄-->

<aside class="col-lg-1 col-lg-offset-1 col-sm-1">
    <!-------------------asideOpen------------------->
    @*@Html.Partial("Aside")*@

    <!-------------------asideEnd------------------->
</aside>
<article class="col-lg-9 col-sm-11">
    <!-------------------articleOpen------------------->
    <div>
        <!--顏色請自己放在Css內 這只是樣板-->
        <div style="height:auto;background-color:#fff266" class="drawingpin">
            <h2>產品分類修改</h2>
            <form method="post" action="~/HospitalCRUD/UpDataHospital" class="form-horizontal" onsubmit="return checkForm(this);">
                @foreach (var Item in Model)
                {
                    <div class="form-group" style="display:none">
                        <label for="HospitalID" class="col-sm-2 control-label ">醫院編號</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="HospitalID" value="@Item.HospitalID" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="HospitalName"
                               class="col-sm-2 control-label">醫院名稱</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="HospitalName" value="@Item.HospitalName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="HospitalAddress"
                               class="col-sm-2 control-label">醫院地址</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="HospitalAddress" value="@Item.HospitalAddress" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="AddressArea"
                               class="col-sm-2 control-label">醫院區域</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="AddressArea" value="@Item.AddressArea" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="HospitalPhone"
                               class="col-sm-2 control-label">醫院電話</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="HospitalPhone" value="@Item.HospitalPhone" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="PetRace"
                               class="col-sm-2 control-label">寵物種類</label>
                        <div class="col-sm-10">
                            <fieldset>
                                <input type="checkbox" value="1" id="Category1" name="Category1" />狗
                                <input type="checkbox" value="2" id="Category2" name="Category2" />貓
                                <input type="checkbox" value="3" id="Category3" name="Category3" />鳥
                                <input type="checkbox" value="4" id="Category4" name="Category4" />兔
                                <input type="checkbox" value="5" id="Category5" name="Category5" />鼠
                                <input type="checkbox" value="6" id="Category6" name="Category6" />其他
                            </fieldset>
                        </div>
                        <input type="hidden" id="CategoryList" name="CategoryList" />
                    </div>
                    <div class="form-group">
                        <label for="BusinessHours"
                               class="col-sm-2 control-label">營業時間</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="BusinessHours" value="@Item.BusinessHours" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Emergency"
                               class="col-sm-2 control-label">急診時間</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Emergency" value="@Item.Emergency" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="OutpatientProject"
                               class="col-sm-2 control-label">專業科目</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="OutpatientProject" value="@Item.OutpatientProject" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Equipment"
                               class="col-sm-2 control-label">醫院設備</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Equipment" value="@Item.Equipment" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="WebAddress"
                               class="col-sm-2 control-label">醫院網址</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="WebAddress" value="@Item.WebAddress" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="OnlineConsultation"
                               class="col-sm-2 control-label">線上問診</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="OnlineConsultation" value="@Item.OnlineConsultation" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="OnlineConsultation"
                               class="col-sm-2 control-label">顯示狀態</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="OnlineConsultation" value="@Item.OnView" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-default">修改</button>
                            <a href="@Url.Action("RemoveHospital","HospitalCRUD",new { id = Item.HospitalID })"><input type="button" value="隱藏" /></a>
                            <a href="@Url.Action("RemoveHospital","HospitalCRUD",new { id = Item.HospitalID })"><input type="button" value="顯示" /></a>
                           
                            @*<button type="submit" class="btn btn-default">刪除</button>*@
                        </div>
                    </div>
                }
            </form>
        </div>


    </div>
    @*<div style="height:500px;background-color:burlywood" class="drawingpin">

        </div>*@
    </div>
    <!-------------------articleEnd------------------->
</article>

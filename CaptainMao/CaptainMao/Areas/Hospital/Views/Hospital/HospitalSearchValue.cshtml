@*@model CaptainMao.Areas.Hodpital.Models.ViewModel.HospitalModel*@
@{
    ViewBag.Title = "Main";
    Layout = "~/Views/Shared/_MaoLayout.cshtml";
}
<script>
    function checkForm() {
        if ($('#UserID').val() == "") {
            alert("請輸入發言人");
            return false;
        }
        if ($('#Score').val() == "") {
            alert("請選擇星等評價");
            return false;
        }
        if ($('#NoteValue').val() == "") {
            if (confirm("請輸入留言")) {
                return true;
            } else {
                return false;
            }
        }
    }
    window.onload = function poto() {

        for (var i = 1; i <= 5; i++) {
            document.getElementById(i + "idimg").onmouseover = mouseover;
            document.getElementById(i + "idimg").onmouseout = mouseout;
            document.getElementById(i + "idimg").onclick = mouseclick;
        }
    };
    function mouseover() {
        var q = parseInt(event.currentTarget.id)
        for (var i = 1; i <= q; i++)
        { document.getElementById(i + "idimg").src = "/Areas/Hospital/Image/mai.png" }
    }
    function mouseout() {
        var q = parseInt(event.currentTarget.id)
        for (var i = 1; i <= q; i++)
        { document.getElementById(i + "idimg").src = "/Areas/Hospital/Image/main2.png" }
    }
    function mouseclick() {
        var q = parseInt(event.currentTarget.id)
        for (var i = 1; i <= q; i++)
        { document.getElementById(i + "idimg").src = "/Areas/Hospital/Image/mai.png" }
        for (var i = 1; i <= 5; i++) {
            document.getElementById(i + "idimg").onmouseover = null;
            document.getElementById(i + "idimg").onmouseout = null;
            document.getElementById(i + "idimg").onclick = null;
        }

        document.getElementById("Score").value = q;
        document.getElementById("butck").onclick = buttonclick;
        document.getElementById("butck").style = "display:black";
    }
    function buttonclick() {
        for (var i = 1; i <= 5 ; i++) {
            document.getElementById(i + "idimg").onmouseover = mouseover;
            document.getElementById(i + "idimg").onmouseout = mouseout;
            document.getElementById(i + "idimg").onclick = mouseclick;
            document.getElementById(i + "idimg").src = "/Areas/Hospital/Image/mai.png";
        }
        document.getElementById("idsp").innerHTML = "";
        document.getElementById("butck").style = "display:none";
    }




</script>
<!--aside側欄 article主欄-->

<aside class="col-lg-1 col-lg-offset-1 col-sm-1">
    <!-------------------asideOpen------------------->
    @Html.Partial("Aside")
    <!-------------------asideEnd------------------->
</aside>
<article class="col-lg-9 col-sm-11">
    <!-------------------articleOpen------------------->
    <div>
        <!--顏色請自己放在Css內 這只是樣板-->
        <div style="overflow:auto;background-color:#fff266" class="drawingpin">
            <h2> @Model.HospitalName</h2>
            <div class="form-group">
                <label for="HospitalAddress"
                       class="col-sm-2 control-label">醫院地址</label>
                <div class="col-sm-10">
                    <p>@Model.HospitalAddress</p>
                </div>
            </div>
            <div class="form-group">
                <label for="AddressArea"
                       class="col-sm-2 control-label">醫院區域</label>
                <div class="col-sm-10">
                    <p>@Model.AddressArea</p>
                </div>
            </div>
            <div class="form-group">
                <label for="HospitalPhone"
                       class="col-sm-2 control-label">醫院電話</label>
                <div class="col-sm-10">
                    <p>@Model.HospitalPhone</p>
                </div>
            </div>
            <div class="form-group">
                <label for="PetRace"
                       class="col-sm-2 control-label">寵物種類</label>
                <div class="col-sm-10">
                    <fieldset>
                        <p>@ViewBag.SetName</p>
                    </fieldset>
                </div>
            </div>
            <div class="form-group">
                <label for="BusinessHours"
                       class="col-sm-2 control-label">營業時間</label>
                <div class="col-sm-10">
                    <p>@Model.BusinessHours</p>
                </div>
            </div>
            <div class="form-group">
                <label for="Emergency"
                       class="col-sm-2 control-label">急診時間</label>
                <div class="col-sm-10">
                    <p>@Model.Emergency</p>
                </div>
            </div>
            <div class="form-group">
                <label for="OutpatientProject"
                       class="col-sm-2 control-label">專業科目</label>
                <div class="col-sm-10">
                    <p>@Model.OutpatientProject</p>
                </div>
            </div>
            <div class="form-group">
                <label for="Equipment"
                       class="col-sm-2 control-label">醫院設備</label>
                <div class="col-sm-10">
                    <p>@Model.Equipment</p>
                </div>
            </div>
            <div class="form-group">
                <label for="WebAddress"
                       class="col-sm-2 control-label">醫院網址</label>
                <div class="col-sm-10">
                    <p>@Model.WebAddress</p>
                </div>
            </div>
            <div class="form-group">
                <label for="OnlineConsultation"
                       class="col-sm-2 control-label">地圖</label>
                <div class="col-sm-10">
                    <div></div>
                    @{Html.RenderPartial("~/Areas/Hospital/Views/Hospital/Map.cshtml",new { HospitalID  = Model.HospitalID });}
                </div>
            </div>

        </div>
        <div style="height:auto;background-color:burlywood" class="drawingpin">

            <h2>@ViewBag.HospitalName - 評分</h2>
            一星：@ViewBag.S1
            二星：@ViewBag.S2
            三星：@ViewBag.S3
            四星：@ViewBag.S4
            五星：@ViewBag.S5




            <form method="post" action="~/Hospital/Hospital/ListToNote" onsubmit="return checkForm(this);">
                <h2></h2>
                <input type="hidden" id="HospitalID" name="HospitalID" value="@ViewBag.HospitalID" />
                <table>
                    <tr>
                        <th>星等</th>
                        <td>
                            <img id="1idimg" src="~/Areas/Hospital/Image/main2.png" style="width:100px" />
                            <img id="2idimg" src="~/Areas/Hospital/Image/main2.png" style="width:100px" />
                            <img id="3idimg" src="~/Areas/Hospital/Image/main2.png" style="width:100px" />
                            <img id="4idimg" src="~/Areas/Hospital/Image/main2.png" style="width:100px" />
                            <img id="5idimg" src="~/Areas/Hospital/Image/main2.png" style="width:100px" />
                            <input type="hidden" id="Score" name="Score" />
                        </td>
                    </tr>
                    <tr>
                        <th>評語</th>
                        <td colspan=4><textarea style="width:400px;height:100px;" id="NoteValue" name="NoteValue"></textarea></td>
                    </tr>
                    <tr>
                        <td><input type="submit" value="送出評分" /></td>
                    </tr>
                </table>
            </form>
            @*//載入評分的清單*@
            <table class="table table-striped">
                @Html.Action("ShowThisNote", "Hospital", new { HospitalID = @ViewBag.HospitalID })
            </table>

        </div>
    </div>
    <!-------------------articleEnd------------------->
</article>





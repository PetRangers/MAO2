        <div style="height:300px;background-color:#fff266" class="drawingpin">
            @*<form action="~/Hospital/_HospitalSearchCity" method="post">*@
            <h2>醫院查詢</h2>
            @Html.DropDownList("HospitalCity", (IEnumerable<SelectListItem>)ViewBag.HospitalCity)

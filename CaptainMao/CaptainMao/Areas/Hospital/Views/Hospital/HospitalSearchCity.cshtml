
@{
    ViewBag.Title = "Main";
    Layout = "~/Views/Shared/_MaoLayout.cshtml";
}

<script>
    function ChangeList() {
        var clicktbn = $('#HospitalCity').val();
        var clicktbnRace = $('#HospitalPetRace').val();

        $.ajax({
            url: "/Hospital/Hospital/_HospitalSearchCity",
            type: "POST",
            data: { 'CityID': clicktbn, 'CategoryID': clicktbnRace },
            dataType: "text",
            traditional: true,
            success: function (data) {
                //alert("1");
                $('#_HospitalCity').load("/Hospital/Hospital/_HospitalSearchCity", { "CityID": clicktbn, 'CategoryID': clicktbnRace });//路徑增加Hospital
            },
            error: function (XMLHttpRequest) {
                alert(XMLHttpRequest.responseText);
            }
        });
    }

</script>


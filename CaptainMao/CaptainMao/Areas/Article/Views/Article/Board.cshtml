@model CaptainMao.Areas.Article.Models.BoardViewModel

@{
    ViewBag.Title = "討論區";
    Layout = "~/Views/Shared/_MaoLayout.cshtml";
}
@section style{
    <style>
        .title {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
    </style>
    }
<aside class="col-lg-1 col-lg-offset-1 col-sm-1">
    <!-------------------asideOpen------------------->
    @Html.Partial("Aside")
    <!-------------------asideEnd------------------->
</aside>
<article class="col-lg-9 col-sm-11">
    <!-------------------articleOpen------------------->
    <div>
        <!--顏色請自己放在Css內 這只是樣板-->

        <div style="height:70px;background-color:#fff266" class="drawingpin">
            <div class="navbar-left">
                @Html.ActionLink("主版", "Board", null, new { @class = "btn btn-info" })
                @Html.ActionLink("文章列表", "Index", null, new { @class = "btn btn-info" })
            </div>
        </div>
        <div class="drawingpin">
            <img src="~/images/33725431546_cc653802ce_h.jpg" style="max-width:100%" width="1300" height="300"/>
        </div>
        <div class="row">
            <div class="col-lg-9">
                <div style="background-color:burlywood" class="drawingpin">
                    <h2>高人氣文章</h2>
                    <div class="row">
                        @foreach (var item in Model.article)
                        {
                            <div class="col-md-4">
                                <div class="thumbnail" style="height:200px">
                                    <a href="@Url.Action("Show","Article",new { area="Article",articleID=@item.ArticleID})"><img style="width:120px;height:100px" src="@Html.DisplayFor(a=>item.ContentText)" /></a>
                                    <div class="caption">
                                        <a href="@Url.Action("Show","Article",new { area="Article",articleID=@item.ArticleID})"><h4 class="title text-center">[@Html.DisplayFor(a => item.TitleCategory.TitleCategoryName)]@Html.DisplayFor(a => item.Title)</h4></a>
                                        <h4 class="text-right">瀏覽人數 ： @Html.DisplayFor(a=>item.Number)</h4>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div  style="background-color:burlywood" class="drawingpin">

                </div>
            </div>
        </div>
    </div>
    <!-------------------articleEnd------------------->
</article>